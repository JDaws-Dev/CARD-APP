# =============================================================================
# KidCollect Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================================================

# Convex (required)
# These are automatically set when you run `npx convex dev`
CONVEX_DEPLOYMENT=""
NEXT_PUBLIC_CONVEX_URL=""

# Google OAuth (for Google sign-in)
# Get credentials at: https://console.cloud.google.com/apis/credentials
# Configure OAuth consent screen and create OAuth 2.0 Client ID
# Set via: npx convex env set AUTH_GOOGLE_ID <your-client-id>
# Set via: npx convex env set AUTH_GOOGLE_SECRET <your-client-secret>
# Note: These are Convex backend env vars, not Next.js env vars
# AUTH_GOOGLE_ID=""
# AUTH_GOOGLE_SECRET=""

# Pokemon TCG API (optional - has free tier without key)
# Get your key at: https://dev.pokemontcg.io/
POKEMON_TCG_API_KEY=""

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="KidCollect"

# Stripe (for subscriptions - Phase 6)
# STRIPE_SECRET_KEY=""
# STRIPE_WEBHOOK_SECRET=""
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Error Monitoring (optional)
# SENTRY_DSN=""

# Analytics (optional)
# NEXT_PUBLIC_POSTHOG_KEY=""
