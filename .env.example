# =============================================================================
# KidCollect Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================================================

# Database (PostgreSQL)
# For local development, you can use Railway, Supabase, or Docker
DATABASE_URL="postgresql://user:password@localhost:5432/kidcollect?schema=public"

# Supabase Auth (or replace with Auth0)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Pokemon TCG API (optional - has free tier without key)
# Get your key at: https://dev.pokemontcg.io/
POKEMON_TCG_API_KEY=""

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="KidCollect"

# Stripe (for subscriptions - Phase 6)
# STRIPE_SECRET_KEY=""
# STRIPE_WEBHOOK_SECRET=""
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Error Monitoring (optional)
# SENTRY_DSN=""

# Analytics (optional)
# NEXT_PUBLIC_POSTHOG_KEY=""
